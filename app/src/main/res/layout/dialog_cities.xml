<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Waste bin image -->
    <ImageView
        android:id="@+id/dialogImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Image de la poubelle"
        android:src="@drawable/bin_yellow"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Communes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Nearest address section -->
    <TextView
        android:id="@+id/nearestAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse la plus proche : en cours de calcul..."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Search bar for cities -->
    <EditText
        android:id="@+id/searchCitiesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rechercher une commune"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="12dp"
        android:inputType="text" />

    <!-- List of cities -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />
</LinearLayout>
