<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rechercher un type de déchet"
        android:inputType="text" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localisation : En cours de récupération..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp" />

    <ListView
        android:id="@+id/listViewDechets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/pointsCollecteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Sélectionnez un type de déchet pour voir les points de collecte." />
</LinearLayout>
